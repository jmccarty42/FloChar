@page
@model FloChar.QuestionForumModel
@{
    ViewData["Title"] = "QuestionForum";
}

<script src="~/js/questionHandler.js"></script>

<h2>QuestionForum</h2>

@foreach (var rootQuestion in Model.RootQuestions)
{
    <div>
        <p>
            <a href="/treedisplay" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapse-@rootQuestion.Id" aria-expanded="false" aria-controls="collapse-@rootQuestion.Id;">
                @rootQuestion.Name
            </a>
        </p>
        <div class="collapse" id="collapse-@rootQuestion.Id">
            <div class="card card-body">
                Loading...
            </div>
        </div>
    </div>
}